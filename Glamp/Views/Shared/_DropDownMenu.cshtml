@using System
@using System.Xml
@model Campgrounds
@using Glamp.Models;


<style>
    #ddmenu{
        display:flex;
       
    }

</style>
    <div class="form-group" id="ddmenu">
        
            <form asp-controller="Campgrounds" asp-action="Index" method="post">
               
                    <select class="custom-select" asp-items="@(new SelectList(Enum.GetValues(typeof(DropDownMenu.States))))" asp-for="selectState"></select>

                    <select class="custom-select" asp-items="@(new SelectList(Model.activityDictionary, "Value", "Key"))" asp-for="selectActivity  "></select>
                
                <input class="form-control form-control-sm" type="submit" value="Submit" />
            </form>
        </div>
        
